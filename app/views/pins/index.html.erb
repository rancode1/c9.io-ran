<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

  <% @pins.each do |pin| %>
    <%= pin.description %><br>
    <%= image_tag pin.image.url(:medium) %><br>
    <%= link_to 'Show', pin %>
    <% if pin.user == current_user %>
    <%= link_to 'Edit', edit_pin_path(pin) %>
    <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
<br>

<%= link_to 'New Pin', new_pin_path %>
